<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザーログイン</h2>

        <%= form_with model: @user, url: user_session_path, local: true do |f| %>

          <%= render 'layouts/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（半角英数字6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
         <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
