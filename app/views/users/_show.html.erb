<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.name + "さんの情報" %>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
        </tbody>
      </table>
      <% if current_user.admin? %>
        <%= link_to '戻る', events_admin_user_path(@user.id) %>
      <% else %>
        <%= link_to '戻る', root_path %>
      <% end %>
    </div>
  </div>
</div>