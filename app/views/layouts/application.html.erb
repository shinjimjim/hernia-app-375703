<!DOCTYPE html>
<html>
  <head>
    <title>HerniaApp375703</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header p-4 mb-2 text-white">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
            <%# <%= link_to image_tag("logo.png", class: :logo), root_path %>
          </div>
          <%# 一般ユーザー用 %>
          <% if user_signed_in? %>
            <div class="nav__right">
              <%= link_to current_user.name, edit_user_registration_path, class: :nav__btn %>
              <%= link_to "ログアウト", destroy_user_session_path, class: :nav__logout, method: :delete %>
            </div>
          <% end %>
          <%# // 一般ユーザー用 %>
          <%# 管理者用 %>
          <% if user_signed_in? && current_user.admin? %>
            <div class="nav__right">
              <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
            </div>
          <% end %>
          <%# // 管理者用 %>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <p class="copyright">Copyright © Hernia app All rights reserved.</p>
    </footer>
  </body>
</html>
