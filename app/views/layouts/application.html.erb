<!DOCTYPE html>
<html>
  <head>
    <title>HerniaApp375703</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header p-4 mb-2 text-white">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
             <%= link_to image_tag("logo.png", class: :logo), root_path %>
          </div>
          <% if user_signed_in? %>
            <%# 管理者用 %>
            <% if current_user.admin? %>
              <div class="nav__right">
                <%= link_to "新規登録", new_user_registration_path, class: "btn btn-secondary" %>
                <%= link_to "ログアウト", destroy_user_session_path, class: "btn btn-secondary", method: :delete %>
              </div>
            <%# // 管理者用 %>
            <%# 一般ユーザー用 %>
            <% else %>
              <div class="nav__right">
                <%= link_to "ログアウト", destroy_user_session_path, class: "btn btn-secondary", method: :delete %>
              </div>
            <% end %>
            <%# // 一般ユーザー用 %>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <p class="copyright">Copyright © Heal-nia All rights reserved.</p>
    </footer>
  </body>
</html>
